// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id          Int       @id @default(autoincrement())
  key         String?
  email       String    @unique
  password    String
  first_name  String?
  middle_name String?
  last_name   String?
  image       String?
  token       String?
  timestamp   DateTime  @default("2022-08-28T00:10:00+02:00")
}


model Shop {
  id        Int       @id @default(autoincrement())
  code      String?
  name      String    @unique
  address   String
  logo      String?
  timestamp DateTime  @default("2022-08-28T00:10:00+02:00")
  products  Product[]
}


model Product {
  id        Int     @id @default(autoincrement())
  code      String?
  name      String
  image     String?
  price     Int
  quantity  Int
  timestamp DateTime  @default("2022-08-28T00:10:00+02:00")
  shop      Shop    @relation(fields: [shopId], references: [id])
  shopId    Int
}
